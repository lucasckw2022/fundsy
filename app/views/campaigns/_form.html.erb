<%= simple_form_for @campaign do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>
  <%= f.input :goal %>
  <%= f.input :end_date %>
  <%= f.input :address%>
  <h2>Rewards</h2>
  <div id="rewards">
    <%= f.simple_fields_for :rewards do |r| %>
    <%= render 'reward_fields',f:r%>
    <%end%>
    <div class="links">
      <%= link_to_add_association 'add reward',f,:rewards %>
    </div>
  </div>
  <%= f.submit class:"btn btn-primary" %>
<% end %>
